.body {
  background: #F2F3F8;
  min-height: 100vh;
  width: 100%;
  overflow: hidden;
}

.main {
  background: #FFF;
  padding: 24rpx;
  margin: 24rpx;
  display: flex;
  flex-wrap: wrap;
}

.blue{
  color: rgb(63,)88,190;
}

.main>view {
  width: 654rpx;
  height: auto;
}

.title {
  margin-bottom: 48rpx;

}

.titleOne {
  color: #3E404B;
  font-size: 36rpx;
  margin-bottom: 16rpx;
}

.titleTwo, .title .date {
  color: #AEAFBA;
  font-size: 24rpx;
}

.plan {
  background: #F2F3F8;
  display: flex;
  flex-direction: reverse;
  padding: 24rpx;
  margin-bottom: 50rpx;
  position: relative;
}

.plan>view {
  display: inline-block;
}

.planOne {
  color: #AEAFBA;
  font-size: 24rpx;
  width: 164rpx;
  text-align: left;
}

.planTwo {
  color: #3E404B;
  font-size: 26rpx;
  width: 164rpx;
  white-space:nowrap;
}

.planThree {
  color: #7A7D90;
  font-size: 20rpx;
  width: 240rpx;
  text-align: center;
  margin: 0rpx 16rpx;
}


.planLine {
  width: 240rpx;
  margin: 0rpx 16rpx 80rpx 16rpx;
}

.planLine>image {
  height: 8rpx;
  width: 240rpx;
}

.planFour {
  color: #AEAFBA;
  font-size: 24rpx;
  width: 144rpx;
  text-align: left;
}

.planFive {
  color: #3E404B;
  font-size: 26rpx;
  width: 164rpx;
  white-space:nowrap;
}

.plan .base-plan-item {
  font-size: 24rpx;
}

.plan .plan-font-title {
  color: #AEAFBA;
  margin-top: 30rpx;
}

.plan .plan-font-value {
  color: #3E404B;
}

.conentMain {
  position: relative;
}




.conLine {
  border-left: 3rpx solid #C9CBD7;
  margin-left: 22rpx;
  padding:0rpx 0rpx 24rpx 0rpx;
}


.conLineLast {
  padding: 24rpx 0rpx;
}

.conent {
  margin: 0rpx 24rpx 0 30rpx;
}

.conent>view {
  width: 420rpx;
  display: inline-block;
}

.conentOne {
  color: #7A7D90;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.conentTwo {
  width: 444rpx;
  color: #3E404B;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.conentThree {
  color: #AEAFBA;
  font-size: 24rpx;
}


.conImg {
  height: 128rpx;
  width: 128rpx;
  margin-left: 29rpx;
}

.introduce {
  background: #F2F3F8;
  height: 176rpx;
  padding: 24rpx;
  position: relative;
  margin-top: 24rpx;
}

.lastItem{
  margin-left: 24rpx;
}

.via {
  height: 176rpx;
  width: 144rpx;
  float: left;
}

.right {
  display: flex;
  position: absolute;
  left: 82rpx;
  margin-left: 100rpx;
  height: 176rpx;
  flex-direction: column;

}

.name {
  margin-bottom: 24rpx;
  font-size: 36rpx;
  height: 36rpx;
  width: 300rpx;
}

.topRight {
  height: 20rpx;
  width: 280rpx;
  position: absolute;
  top: 32rpx;
  right: 24rpx;
}

.company {
  height: 55rpx;
  width: 450rpx;
  font-size: 28rpx;
  word-break:break-all;
  color: #696C7F;
}

.position {
  height: 32rpx;
  width: 300rpx;
  font-size: 28rpx;
  color: #696C7F;
  margin: 8rpx 0rpx;
}

.phone {
  height: 32rpx;
  width: 300rpx;
  font-size: 28rpx;
  
 
}

.phoneNumber{
  text-decoration: underline;
  color: rgb(63, 88,190);
}


.leftCircle {
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  z-index: 10;
}

.leftCircle>image {
  position: absolute;
  left: -50rpx;
  height: 40rpx;
  width: 40rpx;
}




.firstText {
  z-index: 20;
  
}
.body {
  width: 100%;
  min-height: 100vh;
  overflow: hidden;
  background: #F2F3F8;
  font-family: PingFangSC-Semibold, PingFang SC;
}

.main {
  background: #FFF;
  margin: 24rpx;
  padding: 40rpx 24rpx 8rpx 24rpx ;
}
.main>view{
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: row;
}

.main>view>view {
  display: inline-block;
}

.icon {
  height: 32rpx;
  width: 32rpx;
  margin: 4rpx 16rpx 4rpx 0rpx;

}

.icon>image {
  height: 32rpx;
  width: 32rpx;
}


.title {
  width: 160rpx;
  height: 40rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(62, 64, 75, 1);
}

.content {
  width: 446rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(122, 125, 144, 1);
}
.body {
  background: rgba(242, 243, 248, 1);
  display: flex;
  justify-content: center;
  padding: 24rpx;
}

.main {
  background: #FFFFFF;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.block {
  margin-bottom: 24rpx;
}

.block>image {
  height: 240rpx;
  width: 314rpx;
}

.block>view {
  font-size: 28rpx;
  text-align: center;
  padding: 24rpx 0;
  color: rgba(62, 64, 75, 1);
}